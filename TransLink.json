{
  "app_name": "TransLink",
  "version": "1.0.0",
  "platform": "Android",
  "screen_flows": {
    "authentication_flow": {
      "flow_id": "AUTH_FLOW",
      "screens": [
        {
          "screen_id": "AUTH_001",
          "screen_name": "Splash Screen",
          "route": "/splash",
          "features": [
            "TransLink logo and branding",
            "App version number",
            "Loading indicator",
            "Auto-detect system language and theme",
            "Check authentication status"
          ],
          "navigation": {
            "if_authenticated": "/home",
            "if_not_authenticated": "/login",
            "duration_seconds": 3
          },
          "ui_elements": {
            "logo": true,
            "version_text": true,
            "loading_spinner": true
          }
        },
        {
          "screen_id": "AUTH_002",
          "screen_name": "Welcome & Login",
          "route": "/login",
          "features": [
            "Welcome message in detected language",
            "App introduction carousel (3 slides)",
            "Google Sign-In button",
            "Language selector"
          ],
          "carousel_slides": [
            {
              "type": "specific_route",
              "label": "Specific Route",
              "requires_route_selection": true
            },
            {
              "type": "drivers_only",
              "label": "Drivers Only"
            }
          ],
          "create_alert_form": {
            "fields": [
              "alert_type",
              "message",
              "recipients"
            ],
            "actions": {
              "send": "POST /api/alerts",
              "confirmation": "Alert sent successfully"
            }
          },
          "alerts_list": {
            "fields": [
              "timestamp",
              "type",
              "message",
              "recipients_count",
              "status"
            ],
            "actions": {
              "tap_alert": "show_alert_details"
            }
          }
        }
      ]
    },
    "common_screens": {
      "flow_id": "COMMON_SCREENS",
      "applicable_to_all_roles": true,
      "screens": [
        {
          "screen_id": "COM_001",
          "screen_name": "Notification Center",
          "route": "/notifications",
          "features": [
            "List of all notifications",
            "Mark as read/unread",
            "Delete notifications",
            "Filter by type",
            "Clear all button"
          ],
          "notification_types": [
            "bus_arrival",
            "service_alert",
            "system_update",
            "crowd_report_thanks"
          ],
          "actions": {
            "tap_notification": "navigate_to_relevant_screen",
            "swipe_to_delete": true,
            "clear_all": {
              "confirmation_required": true
            }
          },
          "filters": {
            "unread_only": true,
            "by_type": true
          }
        },
        {
          "screen_id": "COM_002",
          "screen_name": "Offline Mode Indicator",
          "route": null,
          "display_type": "banner",
          "features": [
            "Offline status message",
            "Using saved data explanation",
            "Retry connection button",
            "Auto-hide when online"
          ],
          "banner": {
            "position": "top",
            "color": "warning_yellow",
            "message": "You're offline",
            "sub_message": "Using saved data",
            "dismissible": false
          },
          "actions": {
            "retry": "attempt_connection",
            "auto_dismiss_when": "connection_restored"
          },
          "trigger": {
            "condition": "no_internet_connection"
          }
        },
        {
          "screen_id": "COM_003",
          "screen_name": "Error Screen",
          "route": "/error",
          "display_type": "full_screen_or_dialog",
          "features": [
            "Error icon",
            "Clear error message",
            "Suggested action",
            "Retry button",
            "Go back button"
          ],
          "error_types": [
            {
              "type": "network_error",
              "icon": "wifi_off",
              "message": "No internet connection",
              "suggestion": "Check your connection and try again"
            },
            {
              "type": "server_error",
              "icon": "server_error",
              "message": "Something went wrong",
              "suggestion": "Please try again later"
            },
            {
              "type": "not_found",
              "icon": "search_off",
              "message": "Content not found",
              "suggestion": "The page you're looking for doesn't exist"
            },
            {
              "type": "permission_denied",
              "icon": "lock",
              "message": "Permission required",
              "suggestion": "Enable location permission to continue"
            }
          ],
          "actions": {
            "retry": "repeat_failed_action",
            "go_back": "navigate_to_previous_screen"
          }
        }
      ]
    }
  },
  "navigation_patterns": {
    "bottom_navigation": {
      "always_visible": true,
      "quick_access": true,
      "role_specific": true
    },
    "back_button": {
      "type": "native",
      "behavior": "standard_android_ios"
    },
    "bottom_sheets": {
      "use_for": [
        "temporary_information",
        "quick_actions",
        "forms"
      ],
      "draggable": true
    },
    "modal_dialogs": {
      "use_for": [
        "confirmations",
        "critical_actions",
        "alerts"
      ]
    },
    "swipe_gestures": {
      "card_actions": true,
      "dismiss_sheets": true,
      "navigation": false
    }
  },
  "interaction_patterns": {
    "gestures": {
      "tap": "primary_action",
      "long_press": "map_pin_drop",
      "swipe_right": "save_to_favorites",
      "swipe_left": "delete_or_remove",
      "pull_down": "refresh",
      "drag": "move_bottom_sheets"
    },
    "loading_states": {
      "lists": "skeleton_screens",
      "cards": "shimmer_effect",
      "actions": "progress_indicators",
      "timeout_seconds": 10
    },
    "empty_states": {
      "illustration": true,
      "explanation": true,
      "call_to_action": true,
      "help_text": true
    },
    "feedback": {
      "toast": "brief_messages",
      "snackbar": "with_action",
      "icons": "check_or_error",
      "alerts": "color_coded"
    }
  },
  "accessibility_features": {
    "high_contrast_mode": true,
    "screen_reader_compatible": true,
    "minimum_touch_target_dp": 48,
    "focus_indicators": "clear_and_visible",
    "voice_commands": "search_enabled",
    "text_scaling": true,
    "color_blind_friendly": true,
    "haptic_feedback": true
  },
  "offline_capabilities": {
    "storage": {
      "type": "SQLite",
      "cached_data": [
        "routes",
        "recent_searches",
        "user_preferences",
        "historical_predictions"
      ]
    },
    "features_available_offline": [
      "view_cached_routes",
      "search_recent_destinations",
      "view_predicted_arrival_times",
      "basic_map_navigation"
    ],
    "sync_when_online": {
      "automatic": true,
      "manual_option": true,
      "background": true
    }
  },
  "performance_targets": {
    "app_launch_seconds": 3,
    "api_response_seconds": 2,
    "map_load_seconds": 5,
    "frame_rate_fps": 60,
    "battery_consumption": "minimal_with_optimization"
  }
